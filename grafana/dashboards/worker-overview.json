{
  "title": "Worker Node Overview",
  "uid": "worker-overview",
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "panels": [
    {
      "title": "Worker Nodes (Current)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count(up{job=\"worker-node\"} == 1)",
          "legendFormat": "Workers"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "min": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Pings Ingestion Rate (Total)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(worker_pings_stored_total[1m]))",
          "legendFormat": "pings/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Pings in TTL Window (â‰ˆ10s)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(increase(worker_pings_stored_total[15s]))",
          "legendFormat": "pings"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "min": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "gRPC Success Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(worker_grpc_requests_total{result=\"success\"}[5m])) / sum(rate(worker_grpc_requests_total[5m])) * 100",
          "legendFormat": "success %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 95, "color": "yellow" },
              { "value": 99, "color": "green" }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "title": "gRPC Requests by Method & Result",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum by (method, result) (rate(worker_grpc_requests_total[1m]))",
          "legendFormat": "{{method}} {{result}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 3,
          "min": 0
        }
      }
    },
    {
      "title": "gRPC Latency (p50 / p95 / p99)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(worker_grpc_request_duration_seconds_bucket[30s])))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(worker_grpc_request_duration_seconds_bucket[30s])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(worker_grpc_request_duration_seconds_bucket[30s])))",
          "legendFormat": "p99"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 4,
          "min": 0
        }
      }
    },
    {
      "title": "gRPC Latency by Method (p95)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, method) (rate(worker_grpc_request_duration_seconds_bucket[30s])))",
          "legendFormat": "{{method}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 4,
          "min": 0
        }
      }
    },
    {
      "title": "Pings Ingestion Rate (Total Over Time)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate(worker_pings_stored_total[1m]))",
          "legendFormat": "Total"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0
        }
      }
    },
    {
      "title": "Pings Ingestion Rate per Worker",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(worker_pings_stored_total[1m]))",
          "legendFormat": "{{instance}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0
        }
      }
    },
    {
      "title": "Pings per Region (Top 15)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "topk(15, sum by (gh_prefix) (rate(worker_pings_stored_total[1m])))",
          "legendFormat": "{{gh_prefix}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0
        }
      }
    },
    {
      "title": "gRPC Requests per Worker",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(worker_grpc_requests_total[1m]))",
          "legendFormat": "{{instance}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 3,
          "min": 0
        }
      }
    },
    {
      "title": "Heartbeat to Gateway (Rate)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "expr": "sum by (instance, result) (rate(worker_grpc_requests_total{method=\"Gateway.Heartbeat\"}[1m]))",
          "legendFormat": "{{instance}} {{result}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "fill": 1,
      "fillGradient": 0,
      "points": false,
      "pointradius": 2,
      "bars": false,
      "stack": false,
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 3,
          "min": 0
        }
      }
    },
    {
      "title": "Pings per Worker (Bar Chart)",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(worker_pings_stored_total[1m]))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true,
        "valueMode": "color"
      }
    },
    {
      "title": "Region Distribution (Table)",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "targets": [
        {
          "expr": "topk(50, sum by (gh_prefix) (rate(worker_pings_stored_total[1m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 100, "color": "yellow" },
              { "value": 500, "color": "red" }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "gh_prefix"
            },
            "properties": [
              { "id": "custom.width", "value": 150 }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              { "id": "unit", "value": "req/s" },
              { "id": "decimals", "value": 2 },
              { "id": "custom.displayMode", "value": "color-background" }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          { "desc": true, "displayName": "Value" }
        ]
      }
    },
    {
      "title": "Ping Region Distribution (Stacked)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 44 },
      "targets": [
        {
          "expr": "topk(15, sum by (gh_prefix) (rate(worker_pings_stored_total[1m])))",
          "legendFormat": "{{gh_prefix}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "min": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 1,
            "fillOpacity": 70,
            "gradientMode": "opacity",
            "spanNulls": false,
            "showPoints": "never",
            "stacking": {
              "mode": "normal",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear"
            }
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "calcs": ["mean", "max"]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    }
  ]
}


